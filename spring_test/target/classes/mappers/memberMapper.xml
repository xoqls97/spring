<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.www.repository.MemberDAO">
  <select id="getUser" resultType="com.ezen.www.domain.MemberVO">
  select * from member where id=#{id}
  </select>
  
  <insert id="insert">
  insert into member(id,pw, name,email,home,age) values(#{id},#{pw},#{name},#{email},#{home},#{age})
  </insert>
  
  <update id="lastLogin">
  update member set last_login = now() where id=#{id}
  </update>
  
   <update id="modify">
    update member
    set pw=#{pw}, name=#{name}, email=#{email}, home=#{home}, age=#{age}
    where id=#{id}
  </update>
  <delete id="remove">
    delete from member where id=#{id}
  </delete>
  



</mapper>